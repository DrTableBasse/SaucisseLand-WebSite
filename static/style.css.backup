body {font-family:Arial, sans-serif;background-color:#f7f7f7;color:#333;margin:0;padding:0}header {background-color:#bd20bd;padding:10px 0;color:white;text-align:center}.navbar {display:flex;justify-content:space-between;align-items:center;padding:0 20px;flex-wrap:wrap}.logo {font-size:1.5em;font-weight:bold}.nav-links {display:flex;gap:15px;list-style:none}.nav-links li a {color:white;text-decoration:none}.menu-toggle {display:none;font-size:2em;background:none;border:none;color:white;cursor:pointer}main {padding:20px;min-height:80vh;text-align:center}footer {background-color:#f2f2f2;padding:20px;text-align:center;font-size:0.9em;color:#555;border-top:1px solid #ddd}footer a {color:#555;text-decoration:none;margin:0 5px}footer a:hover {text-decoration:underline}@media screen and (max-width:768px) {.nav-links {display:none;flex-direction:column;width:100%}.nav-links.active {display:flex}.menu-toggle {display:block}}.legal-wrapper {display:flex;justify-content:center;align-items:center;min-height:100vh;background-color:#f8f8f8}.legal-block {max-width:800px;background-color:#fff;padding:2.5rem;border-radius:12px;box-shadow:0 4px 20px rgba(0, 0, 0, 0.08);font-family:'Segoe UI', sans-serif;font-size:1.05rem;color:#333;line-height:1.7;text-align:left}.legal-block h1 {font-size:2rem;margin-bottom:1.5rem;color:#ba2e2e;text-align:left}legal-title {font-size:1.5rem;margin-top:1.5rem;color:#ba2e2e}.markdown-content {font-family:Arial, sans-serif;line-height:1.6;color:#333}.markdown-content h1, .markdown-content h2, .markdown-content h3 {color:#222;margin-top:1.5em}.markdown-content pre {background:#f4f4f4;padding:1em;overflow-x:auto}.markdown-content code {background:#eee;padding:2px 4px;font-family:monospace}.markdown-content blockquote {border-left:4px solid #ccc;padding-left:1em;color:#666;font-style:italic}